# =====================================================
# COMMERCE MVP - Environment Configuration
# =====================================================
# Copy this file to .env and fill in your values

# Server
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/commerce
# Or separate variables:
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=commerce
# DB_USER=user
# DB_PASSWORD=password

# Redis (for caching and queues)
REDIS_URL=redis://localhost:6379

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
WEB_APP_URL=https://your-app.vercel.app

# JWT Auth
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Payment Provider (YooKassa)
YOOKASSA_SHOP_ID=your_shop_id
YOOKASSA_SECRET_KEY=your_secret_key
YOOKASSA_WEBHOOK_SECRET=your_webhook_secret

# Payment Provider (Stripe - alternative)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# File Storage (S3-compatible)
S3_ENDPOINT=https://storage.yandexcloud.net
S3_BUCKET=commerce-files
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key
S3_REGION=ru-central1

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your@email.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=COMMERCE <noreply@commerce.io>

# SMS Provider (for verification)
SMS_PROVIDER=smsru
SMS_API_KEY=your_sms_api_key

# Analytics
AMPLITUDE_API_KEY=your_amplitude_key

# Sentry (error tracking)
SENTRY_DSN=https://xxx@sentry.io/xxx

# Commission settings
COMMISSION_RATE=0.03
MIN_DEAL_AMOUNT=50000

# Feature flags
FEATURE_ESCROW_ENABLED=true
FEATURE_VERIFICATION_ENABLED=true
FEATURE_PREMIUM_ENABLED=false
